{
  "name": "patterns.run",
  "description": "Collection of snippets to render logical patterns",
  "version": "6.0.0",
  "author": "Griko Nibras <git@griko.id>",
  "scripts": {
    "# general commands": "##################################################",
    "build": "next build && next-sitemap --config src/config/sitemap.js",
    "build:static": "yarn build && next export",
    "dev": "next",
    "lint": "eslint --fix \"src/**/*.{js,cjs,mjs,jsx,ts,tsx}\" && tsc --noEmit --pretty",
    "postinstall": "husky install $PWD/.husky",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "#": "###################################################################"
  },
  "engines": {
    "node": "14.x"
  },
  "packageManager": "yarn@3.2.0",
  "dependencies": {
    "@codesandbox/sandpack-react": "^0",
    "@mantine/core": "^4.0.0",
    "@mantine/hooks": "^4.0.0",
    "@mantine/next": "^3",
    "@mantine/prism": "^3",
    "fathom-client": "^3",
    "next": "^12",
    "next-seo": "^5.0.0",
    "next-sitemap": "^2.0.0",
    "pattern-runner": "latest",
    "react": "^17",
    "react-dom": "^17",
    "react-icons": "^4",
    "typescript": "^4",
    "zustand": "^3"
  },
  "devDependencies": {
    "@netlify/plugin-nextjs": "beta",
    "@types/node": "^14",
    "@types/react": "^17",
    "eslint": "^8",
    "eslint-config-kdnj": "^2",
    "eslint-config-next": "^12",
    "husky": "^7",
    "lint-staged": "^12",
    "pinst": "^3.0.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-kdnj/react",
      "plugin:@next/next/recommended"
    ],
    "ignorePatterns": [
      ".next",
      ".yarn",
      "__generated__",
      "node_modules"
    ],
    "rules": {
      "jsx-a11y/anchor-is-valid": [
        "off"
      ]
    },
    "overrides": [
      {
        "files": [
          "*.pattern.js"
        ],
        "globals": {
          "newline": "readonly",
          "print": "readonly",
          "size": "readonly"
        }
      }
    ]
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "license": "MIT"
}
